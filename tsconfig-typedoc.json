{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["lib"]
}